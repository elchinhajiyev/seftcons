<div class="backround-image">
    <%- include('./partials/header-section.ejs') %> 
</div>
<div style=" margin-top: 20px;" class="newscontainer">
<div class="news">
    <% blogs.forEach(blog =>{%> 
    <div class="newscontent1">
        <div class="newsimage1"><img style="max-width: 200px; min-height: 100%;" src="<%= blog.photo %>" alt=""></div>
        <div class="newsname1"><h3><%- blog.header %></h3>
        <p style="padding: 0;"><%- blog.short %> </p></div>
        <a href="/blogs/<%=blog._id%>"></a><div class="readmore"><i class="bi bi-arrow-right-circle"></i></div>
    </div>
    <%}) %> 
</div> 
</div>
<style>
.news{
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin: 20px auto;
}
    .newscontent1{
        gap: 15px;
        display: flex;
        width: 615px;
        background-color: #fff;
        gap: 10px;
          box-shadow: 0px 12px 8px rgba(0, 0, 0, 0.09);
          max-height: 200px;
         
    }
    .newsname1 h3{
        margin-bottom: 2px;

    }

    .readmore{
        margin-top: auto;
        margin-left: auto;
        padding: 10px;
        font-size: 20;
        cursor: pointer;
    }
    .readmore:hover{
        color: orangered;
    }

</style>
